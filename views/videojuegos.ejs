<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Videojuegos</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="stylesheet" href="css/main.css" />
    </head>

    <body>
        <%- include('plantillas/header.ejs') -%>

        <h1>Videojuegos:</h1>

        <% videojuegos.forEach((e) => { %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= e.nombre %></h5>
                <p class="card-text"><b><%= e.dev %></b> - $<%= e.precio %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Publisher: <%= e.publisher%></li>
                <li class="list-group-item"><%= e.fecha %></li>
            </ul>
            </div>
        <% }) %>

        <!-- Comentario para que el formatter no me junte las lÃ­neas -->
        <%- include('plantillas/footer.ejs') -%>
    </body>
</html>
